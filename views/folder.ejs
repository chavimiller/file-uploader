<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= folder.name %> - Files</title>
  </head>
  <body>
    <% const editingId = (typeof editingFileId !== "undefined") ?
    Number(editingFileId) : null; %>

    <header>
      <h1>Folder:<!--<%= folder.name %> --></h1>

      <nav>
        <a href="/home">‚Üê Back to folders</a>
      </nav>
    </header>

    <main>
      <!-- Upload file form for THIS folder -->
      <section>
        <h2>Upload a file</h2>

        <form
          action="/folder/<%= folder.id %>/file/new"
          method="POST"
          enctype="multipart/form-data"
        >
          <input type="file" name="uploaded_file" required />
          <input type="text" name="name" placeholder="File name" required />
          <button type="submit">Upload</button>
        </form>
      </section>

      <hr />

      <!-- Files in this folder -->
      <section>
        <h2>Files in this folder</h2>

        <% if (files && files.length > 0) { %>
        <ul>
          <% files.forEach(file => { %>
          <li>
            <% const isEditing = editingId !== null && file.id === editingId; %>
            <% if (isEditing) { %>
            <!-- EDIT MODE -->
            <form
              action="/folder/<%= folder.id %>/file/<%= file.id %>/edit"
              method="POST"
              style="display: inline"
            >
              <input
                type="text"
                name="name"
                value="<%= file.name %>"
                required
              />
              <button type="submit">Save</button>
            </form>

            <a href="/folder/<%= folder.id %>">Cancel</a>
            <% } else { %>
            <!-- NORMAL MODE -->
            <%= file.name || file.originalName %>

            <a href="/folder/<%= folder.id %>/file/<%= file.id %>/download"
              >Download</a
            >
            <a href="/folder/<%= folder.id %>/file/<%= file.id %>/edit">Edit</a>

            <form
              action="/folder/<%= folder.id %>/file/<%= file.id %>/delete"
              method="POST"
              style="display: inline"
            >
              <button type="submit">Delete</button>
            </form>
            <% } %>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p>No files in this folder yet. Upload one above!</p>
        <% } %>
      </section>
    </main>
  </body>
</html>
